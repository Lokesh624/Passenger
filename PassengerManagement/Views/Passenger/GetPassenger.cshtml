@model IEnumerable<Passenger.Entities.Models.PassengerRegistration>

@{
    ViewData["Title"] = "GetPassenger";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetPassenger</h1>

<p>
    <a asp-action="RegisterPassenger">Register Passenger</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassengerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassengerEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassengerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassengerAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassengerContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PinCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.District)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassengerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassengerEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassengerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassengerAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassengerContact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PinCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdatePassenger", new {  id=item.ID  }) |
                @Html.ActionLink("Details", "GetPassengerByID", new { id = item.ID }) |
                @Html.ActionLink("Delete", "DeletePassenger", new { id = item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
